[
 {bkfw,
  [
   {netif, "eth0"},
   {com, "/dev/pts/3"},
   {usbtty, "/dev/pts/1"},
   {http, [{port, 8080}]},
   {upload_dir, "/tmp"},
   {system_cmd, false},
   {net, {priv_dir, "interface"}},
   {scripts_dir, {priv_dir, "scripts"}},
   {amp_password, 7536},
   {amps, [
		   {1, [
				{'has_PC_mode', true},
				{'has_GC_mode', true},
				{'has_input_PD', true},
				{'has_output_PD', true},
				{'number_of_laser', 1},
				{'has_settable_LD1', true}
			   ]
		   },
		   {2, [
				{'has_PC_mode', false},
				{'has_GC_mode', false},
				{'has_input_PD', false},
				{'has_output_PD', false},
				{'number_of_laser', 2},
				{'has_settable_LD1', false}
			   ]}
		  ]}
  ]},
 
 {snmp,
  [{agent,
    [
     {versions, [v1,v2]},
     {agent_type, master},
     {multi_threaded, false},
     {mib_server, []},
     {config, [{dir, "snmp/agent/conf/"}]},
     {db_dir, "snmp/agent/db/"},
     {agent_verbosity, info},
     {net_if, [
	       {module, snmpa_net_if},
	       {verbosity, info},
	       {bind_to, false}
	      ]}
    ]}]
 },

 %% SASL config
 {sasl, [
         {sasl_error_logger, {file, "log/sasl-error.log"}},
         {errlog_type, error},
         {error_logger_mf_dir, "log/sasl"},      % Log directory
         {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
         {error_logger_mf_maxfiles, 5}           % 5 files max
        ]},

 "/var/lib/bkfw/factory",
 "/var/lib/bkfw/user"
].
